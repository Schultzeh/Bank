    <children>
        <BorderPane />
        <VBox alignment="CENTER" prefHeight="42.0" prefWidth="527.0">
            <children>
                <HBox alignment="BOTTOM_LEFT" prefHeight="21.0" prefWidth="488.0">
                    <children>
                        <Label fx:id="date" prefHeight="21.0" prefWidth="505.0" text="Date" />
                        <Label fx:id="message">
                            <graphic>
                                <ImageView fx:id="messageImage" fitHeight="17.0" fitWidth="17.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@icons8-new-post-50.png" />
